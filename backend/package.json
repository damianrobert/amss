{
  "name": "home-automation-manager-backend",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "eslint ./src && tsc",
    "start:prod": "node ./build/server.js",
    "start:dev": "nodemon --watch ./src --ext 'ts' --exec \"npm run linter && ts-node ./src/server.ts\"",
    "db:start": "docker compose up -d unibuc-iot-mintegration-db",
    "db:stop": "docker compose stop unibuc-iot-mintegration-db",
    "db:migrate": "docker compose build unibuc-iot-mintegration-db-liquidbase-migrations && docker compose up unibuc-iot-mintegration-db-liquidbase-migrations",
    "linter": "eslint ./src",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "mocha"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "otplib": "^12.0.1",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.7",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.11.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  }
}
